<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sk.gasparv.cviko2.MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:layout_editor_absoluteY="7dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">
        <TextView
            android:id="@+id/tv_hod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hod_text"
            android:textSize="@dimen/tv_size_hodminsec"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />
        <TextView
            android:id="@+id/tv_dvojbodka_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/tv_size_hodminsec"
            android:text="@string/dvojbodka_text"
            app:layout_constraintLeft_toRightOf="@+id/tv_hod"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="@+id/tv_hod"
            android:layout_marginTop="0dp" />
        <TextView
            android:id="@+id/tv_min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/minsec_text"
            android:textSize="@dimen/tv_size_hodminsec"
            app:layout_constraintLeft_toRightOf="@+id/tv_dvojbodka_first"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="@+id/tv_dvojbodka_first"
            android:layout_marginTop="0dp" />
        <TextView
            android:id="@+id/tv_dvojbodka_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/tv_size_hodminsec"
            android:text="@string/dvojbodka_text"
            app:layout_constraintTop_toTopOf="@+id/tv_min"
            android:layout_marginTop="0dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_min"
            android:layout_marginLeft="8dp" />
        <TextView
            android:id="@+id/tv_sec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/tv_size_hodminsec"
            android:text="@string/minsec_text"
            app:layout_constraintTop_toTopOf="@+id/tv_dvojbodka_second"
            android:layout_marginTop="0dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_dvojbodka_second"
            android:layout_marginLeft="8dp" />
        <TextView
            android:id="@+id/tv_dot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dot_text"
            android:textSize="@dimen/tv_size_hodminsec"
            app:layout_constraintTop_toTopOf="@+id/tv_sec"
            android:layout_marginTop="0dp"
            app:layout_constraintLeft_toRightOf="@+id/tv_sec"
            android:layout_marginLeft="8dp" />
        <TextView
            android:id="@+id/tv_tenth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hod_text"
            android:textSize="@dimen/tv_size_tenth"
            app:layout_constraintLeft_toRightOf="@+id/tv_dot"
            android:layout_marginLeft="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_dot"
            android:layout_marginBottom="8dp" />
    </android.support.constraint.ConstraintLayout>

    <Button
        android:id="@+id/btn_start"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:text="@string/btn_start_text"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.5"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>
